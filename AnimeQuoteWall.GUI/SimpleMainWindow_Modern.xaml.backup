<Window x:Class="AnimeQuoteWall.GUI.SimpleMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anime Quote Wallpaper Manager"
        Icon="Resources/appicon.ico"
        Height="750"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize">

   <!-- Window Shadow Effect -->
   <Window.Effect>
      <DropShadowEffect BlurRadius="20"
            ShadowDepth="0"
            Color="#4A5568"
            Opacity="0.5"/>
   </Window.Effect>

   <!-- Outer Border with Gradient -->
   <Border CornerRadius="15"
         BorderThickness="1">
      <Border.BorderBrush>
         <LinearGradientBrush StartPoint="0,0"
               EndPoint="1,1">
            <GradientStop Color="#4A5568"
                  Offset="0"/>
            <GradientStop Color="#2D3748"
                  Offset="1"/>
         </LinearGradientBrush>
      </Border.BorderBrush>

      <!-- Main Background with Dark Gradient -->
      <Border.Background>
         <LinearGradientBrush StartPoint="0,0"
               EndPoint="0,1">
            <GradientStop Color="#0D0D0D"
                  Offset="0"/>
            <GradientStop Color="#1A1A1A"
                  Offset="1"/>
         </LinearGradientBrush>
      </Border.Background>

      <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>

         <!-- Custom Title Bar -->
         <Grid Grid.Row="0"
               MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.Background>
               <LinearGradientBrush StartPoint="0,0"
                     EndPoint="1,0">
                  <GradientStop Color="#4A5568"
                        Offset="0"/>
                  <GradientStop Color="#2D3748"
                        Offset="1"/>
               </LinearGradientBrush>
            </Grid.Background>

            <StackPanel Orientation="Horizontal"
                  VerticalAlignment="Center"
                  Margin="15,0">
               <Image Source="Resources/appicon.png"
                      Width="24"
                      Height="24"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>
               <TextBlock Text="Anime Quote Wallpaper Manager"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Window Control Buttons -->
            <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Right"
                  Margin="0,0,10,0">
               <Button Content="â€”"
                     Width="35"
                     Height="35"
                     Background="Transparent"
                     Foreground="White"
                       BorderThickness="0"
                     FontSize="16"
                     Margin="5,0"
                     Click="MinimizeButton_Click"
                     Cursor="Hand">
                  <Button.Style>
                     <Style TargetType="Button">
                        <Setter Property="Template">
                           <Setter.Value>
                              <ControlTemplate TargetType="Button">
                                 <Border Background="{TemplateBinding Background}"
                                       CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                 </Border>
                              </ControlTemplate>
                           </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                           <Trigger Property="IsMouseOver"
                                 Value="True">
                              <Setter Property="Background"
                                    Value="#FFFFFF20"/>
                           </Trigger>
                        </Style.Triggers>
                     </Style>
                  </Button.Style>
               </Button>
               <Button Content="â˜"
                     Width="35"
                     Height="35"
                     Background="Transparent"
                     Foreground="White"
                       BorderThickness="0"
                     FontSize="16"
                     Margin="5,0"
                     Click="MaximizeButton_Click"
                     Cursor="Hand">
                  <Button.Style>
                     <Style TargetType="Button">
                        <Setter Property="Template">
                           <Setter.Value>
                              <ControlTemplate TargetType="Button">
                                 <Border Background="{TemplateBinding Background}"
                                       CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                 </Border>
                              </ControlTemplate>
                           </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                           <Trigger Property="IsMouseOver"
                                 Value="True">
                              <Setter Property="Background"
                                    Value="#FFFFFF20"/>
                           </Trigger>
                        </Style.Triggers>
                     </Style>
                  </Button.Style>
               </Button>
               <Button Content="âœ•"
                     Width="35"
                     Height="35"
                     Background="Transparent"
                     Foreground="White"
                       BorderThickness="0"
                     FontSize="16"
                     Margin="5,0"
                     Click="CloseButton_Click"
                     Cursor="Hand">
                  <Button.Style>
                     <Style TargetType="Button">
                        <Setter Property="Template">
                           <Setter.Value>
                              <ControlTemplate TargetType="Button">
                                 <Border Background="{TemplateBinding Background}"
                                       CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                 </Border>
                              </ControlTemplate>
                           </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                           <Trigger Property="IsMouseOver"
                                 Value="True">
                              <Setter Property="Background"
                                    Value="#FF4444"/>
                           </Trigger>
                        </Style.Triggers>
                     </Style>
                  </Button.Style>
               </Button>
            </StackPanel>
         </Grid>

         <!-- Main Content Area with Modern Tabs -->
         <TabControl Grid.Row="1"
               Margin="20"
               Background="Transparent"
               BorderThickness="0">
            <TabControl.Resources>
               <!-- Modern Tab Style -->
               <Style TargetType="TabItem">
                  <Setter Property="Template">
                     <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                           <Border Name="Border"
                                   Background="#FFFFFF08"
                                   CornerRadius="10,10,0,0"
                                   BorderThickness="0,0,0,3"
                                   Margin="5,0"
                                   Padding="22,14">
                              <Border.BorderBrush>
                                 <SolidColorBrush Color="Transparent"/>
                              </Border.BorderBrush>
                              <ContentPresenter ContentSource="Header"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                           </Border>
                           <ControlTemplate.Triggers>
                              <Trigger Property="IsSelected"
                                    Value="True">
                                 <Setter TargetName="Border"
                                       Property="Background">
                                    <Setter.Value>
                                       <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,0">
                                          <GradientStop Color="#4A556830"
                                                Offset="0"/>
                                          <GradientStop Color="#2D374830"
                                                Offset="1"/>
                                       </LinearGradientBrush>
                                    </Setter.Value>
                                 </Setter>
                                 <Setter TargetName="Border"
                                       Property="BorderBrush">
                                    <Setter.Value>
                                       <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,0">
                                          <GradientStop Color="#718096"
                                                Offset="0"/>
                                          <GradientStop Color="#4A5568"
                                                Offset="1"/>
                                       </LinearGradientBrush>
                                    </Setter.Value>
                                 </Setter>
                              </Trigger>
                              <Trigger Property="IsMouseOver"
                                    Value="True">
                                 <Setter TargetName="Border"
                                       Property="Background"
                                       Value="#FFFFFF12"/>
                              </Trigger>
                           </ControlTemplate.Triggers>
                        </ControlTemplate>
                     </Setter.Value>
                  </Setter>
                  <Setter Property="Foreground"
                        Value="White"/>
                  <Setter Property="FontWeight"
                        Value="Medium"/>
                  <Setter Property="FontSize"
                        Value="14"/>
               </Style>
            </TabControl.Resources>

            <!-- Wallpaper Preview & Generation Tab -->
            <TabItem Header="ðŸ–¼ï¸ Wallpaper">
               <Grid Margin="20">
                  <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                     <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <!-- Modern Section Header -->
                  <Border Grid.Row="0"
                        Background="#FFFFFF08"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,15">
                     <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ–¼ï¸"
                              FontSize="20"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Current Wallpaper Preview"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                     </StackPanel>
                  </Border>

                  <!-- Preview with Glassmorphism Effect -->
                  <Border Grid.Row="1"
                          CornerRadius="15"
                          Margin="0,0,0,20"
                          Background="#FFFFFF10"
                          BorderThickness="1">
                     <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0"
                              EndPoint="1,1">
                           <GradientStop Color="#FFFFFF20"
                                 Offset="0"/>
                           <GradientStop Color="#FFFFFF05"
                                 Offset="1"/>
                        </LinearGradientBrush>
                     </Border.BorderBrush>
                     <Border.Effect>
                        <DropShadowEffect BlurRadius="15"
                              ShadowDepth="0"
                              Color="#4A5568"
                              Opacity="0.3"/>
                     </Border.Effect>
                     <Grid>
                        <Image x:Name="WallpaperPreview"
                               Stretch="Uniform"/>
                        <TextBlock x:Name="NoPreviewText"
                                   Text="No wallpaper generated yet. Click 'Generate New Wallpaper' to create one!"
                                   FontSize="14"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="40"/>
                     </Grid>
                  </Border>

                  <!-- Action Buttons with Modern Gradient Styling -->
                  <Grid Grid.Row="2">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                     </Grid.ColumnDefinitions>

                     <!-- Generate Button with Muted Teal Gradient -->
                     <Button x:Name="GenerateButton"
                             Grid.Column="0"
                             Margin="0,0,8,0"
                             Foreground="White"
                             Height="60"
                             Click="GenerateButton_Click"
                             FontSize="15"
                             FontWeight="Bold"
                             Cursor="Hand"
                             BorderThickness="0"
                             ToolTip="Generate a new wallpaper with a random quote">
                        <Button.Background>
                           <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                              <GradientStop Color="#5A7C8A"
                                    Offset="0"/>
                              <GradientStop Color="#3D5A66"
                                    Offset="1"/>
                           </LinearGradientBrush>
                        </Button.Background>
                        <Button.Effect>
                           <DropShadowEffect BlurRadius="12"
                                 ShadowDepth="0"
                                 Color="#5A7C8A"
                                 Opacity="0.4"/>
                        </Button.Effect>
                        <Button.Style>
                           <Style TargetType="Button">
                              <Setter Property="Template">
                                 <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                       <Border Background="{TemplateBinding Background}"
                                               CornerRadius="12"
                                               BorderThickness="0">
                                          <Border.Effect>
                                             <DropShadowEffect BlurRadius="12"
                                                   ShadowDepth="0"
                                                   Color="#5A7C8A"
                                                   Opacity="0.4"/>
                                          </Border.Effect>
                                          <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                       </Border>
                                       <ControlTemplate.Triggers>
                                          <Trigger Property="IsMouseOver"
                                                Value="True">
                                             <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                   <ScaleTransform ScaleX="1.05"
                                                         ScaleY="1.05"/>
                                                </Setter.Value>
                                             </Setter>
                                          </Trigger>
                                       </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                 </Setter.Value>
                              </Setter>
                              <Setter Property="RenderTransformOrigin"
                                    Value="0.5,0.5"/>
                           </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center">
                           <TextBlock Text="âš¡"
                                 FontSize="22"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                           <TextBlock Text="Generate"
                                 VerticalAlignment="Center"/>
                        </StackPanel>
                     </Button>

                     <!-- Refresh Button with Blue Gradient -->
                     <Button x:Name="RefreshButton"
                             Grid.Column="1"
                             Margin="4,0,4,0"
                             Foreground="White"
                             Height="60"
                             Click="RefreshButton_Click"
                             FontSize="15"
                             FontWeight="Bold"
                             Cursor="Hand"
                             BorderThickness="0"
                             ToolTip="Refresh the preview to see the latest wallpaper">
                        <Button.Background>
                           <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                              <GradientStop Color="#667B8C"
                                    Offset="0"/>
                              <GradientStop Color="#4A5F70"
                                    Offset="1"/>
                           </LinearGradientBrush>
                        </Button.Background>
                        <Button.Style>
                           <Style TargetType="Button">
                              <Setter Property="Template">
                                 <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                       <Border Background="{TemplateBinding Background}"
                                               CornerRadius="12"
                                               BorderThickness="0">
                                          <Border.Effect>
                                             <DropShadowEffect BlurRadius="12"
                                                   ShadowDepth="0"
                                                   Color="#667B8C"
                                                   Opacity="0.4"/>
                                          </Border.Effect>
                                          <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                       </Border>
                                       <ControlTemplate.Triggers>
                                          <Trigger Property="IsMouseOver"
                                                Value="True">
                                             <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                   <ScaleTransform ScaleX="1.05"
                                                         ScaleY="1.05"/>
                                                </Setter.Value>
                                             </Setter>
                                          </Trigger>
                                       </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                 </Setter.Value>
                              </Setter>
                              <Setter Property="RenderTransformOrigin"
                                    Value="0.5,0.5"/>
                           </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center">
                           <TextBlock Text="ðŸ”„"
                                 FontSize="22"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                           <TextBlock Text="Refresh"
                                 VerticalAlignment="Center"/>
                        </StackPanel>
                     </Button>

                     <!-- Apply Button with Red-Orange Gradient -->
                     <Button x:Name="ApplyButton"
                             Grid.Column="2"
                             Margin="8,0,0,0"
                             Foreground="White"
                             Height="60"
                             Click="ApplyButton_Click"
                             FontSize="15"
                             FontWeight="Bold"
                             Cursor="Hand"
                             BorderThickness="0"
                             ToolTip="Set the current wallpaper as your desktop background">
                        <Button.Background>
                           <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                              <GradientStop Color="#8B7D9B"
                                    Offset="0"/>
                              <GradientStop Color="#6B5B7B"
                                    Offset="1"/>
                           </LinearGradientBrush>
                        </Button.Background>
                        <Button.Style>
                           <Style TargetType="Button">
                              <Setter Property="Template">
                                 <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                       <Border Background="{TemplateBinding Background}"
                                               CornerRadius="12"
                                               BorderThickness="0">
                                          <Border.Effect>
                                             <DropShadowEffect BlurRadius="12"
                                                   ShadowDepth="0"
                                                   Color="#8B7D9B"
                                                   Opacity="0.4"/>
                                          </Border.Effect>
                                          <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                       </Border>
                                       <ControlTemplate.Triggers>
                                          <Trigger Property="IsMouseOver"
                                                Value="True">
                                             <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                   <ScaleTransform ScaleX="1.05"
                                                         ScaleY="1.05"/>
                                                </Setter.Value>
                                             </Setter>
                                          </Trigger>
                                       </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                 </Setter.Value>
                              </Setter>
                              <Setter Property="RenderTransformOrigin"
                                    Value="0.5,0.5"/>
                           </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center">
                           <TextBlock Text="âœ…"
                                 FontSize="22"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                           <TextBlock Text="Apply"
                                 VerticalAlignment="Center"/>
                        </StackPanel>
                     </Button>
                  </Grid>
               </Grid>
            </TabItem>

            <!-- Quote Management Tab -->
            <TabItem Header="ðŸ’¬ Quotes">
               <Grid Margin="20">
                  <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                     <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>

                  <!-- Modern Header with Actions -->
                  <Border Grid.Row="0"
                        Background="#FFFFFF08"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,15">
                     <DockPanel>
                        <StackPanel Orientation="Horizontal"
                              DockPanel.Dock="Left">
                           <TextBlock Text="ðŸ’¬"
                                 FontSize="20"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                           <TextBlock Text="Quote Library"
                                      FontSize="18"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Right"
                              Orientation="Horizontal">
                           <!-- Add Quote Button -->
                           <Button x:Name="AddQuoteButton"
                                   Foreground="White"
                                   Width="130"
                                   Height="45"
                                   FontSize="13"
                                   Click="AddQuoteButton_Click"
                                   Margin="0,0,10,0"
                                   Cursor="Hand"
                                   BorderThickness="0"
                                   ToolTip="Add a new quote to your library">
                              <Button.Background>
                                 <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="1,1">
                                    <GradientStop Color="#5A7C8A"
                                          Offset="0"/>
                                    <GradientStop Color="#3D5A66"
                                          Offset="1"/>
                                 </LinearGradientBrush>
                              </Button.Background>
                              <Button.Style>
                                 <Style TargetType="Button">
                                    <Setter Property="Template">
                                       <Setter.Value>
                                          <ControlTemplate TargetType="Button">
                                             <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="10"
                                                   BorderThickness="0">
                                                <Border.Effect>
                                                   <DropShadowEffect BlurRadius="10"
                                                         ShadowDepth="0"
                                                         Color="#5A7C8A"
                                                         Opacity="0.4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                             </Border>
                                             <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                      Value="True">
                                                   <Setter Property="RenderTransform">
                                                      <Setter.Value>
                                                         <ScaleTransform ScaleX="1.03"
                                                               ScaleY="1.03"/>
                                                      </Setter.Value>
                                                   </Setter>
                                                </Trigger>
                                             </ControlTemplate.Triggers>
                                          </ControlTemplate>
                                       </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin"
                                          Value="0.5,0.5"/>
                                 </Style>
                              </Button.Style>
                              <StackPanel Orientation="Horizontal">
                                 <TextBlock Text="âž•"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                                 <TextBlock Text="Add Quote"
                                       VerticalAlignment="Center"/>
                              </StackPanel>
                           </Button>

                           <!-- Delete Quote Button -->
                           <Button x:Name="DeleteQuoteButton"
                                   Foreground="White"
                                   Width="130"
                                   Height="45"
                                   FontSize="13"
                                   Click="DeleteQuoteButton_Click"
                                   Cursor="Hand"
                                   BorderThickness="0"
                                   ToolTip="Delete the selected quote">
                              <Button.Background>
                                 <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="1,1">
                                    <GradientStop Color="#8B7D9B"
                                          Offset="0"/>
                                    <GradientStop Color="#6B5B7B"
                                          Offset="1"/>
                                 </LinearGradientBrush>
                              </Button.Background>
                              <Button.Style>
                                 <Style TargetType="Button">
                                    <Setter Property="Template">
                                       <Setter.Value>
                                          <ControlTemplate TargetType="Button">
                                             <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="10"
                                                   BorderThickness="0">
                                                <Border.Effect>
                                                   <DropShadowEffect BlurRadius="10"
                                                         ShadowDepth="0"
                                                         Color="#8B7D9B"
                                                         Opacity="0.4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                             </Border>
                                             <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                      Value="True">
                                                   <Setter Property="RenderTransform">
                                                      <Setter.Value>
                                                         <ScaleTransform ScaleX="1.03"
                                                               ScaleY="1.03"/>
                                                      </Setter.Value>
                                                   </Setter>
                                                </Trigger>
                                             </ControlTemplate.Triggers>
                                          </ControlTemplate>
                                       </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin"
                                          Value="0.5,0.5"/>
                                 </Style>
                              </Button.Style>
                              <StackPanel Orientation="Horizontal">
                                 <TextBlock Text="ðŸ—‘ï¸"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                                 <TextBlock Text="Delete"
                                       VerticalAlignment="Center"/>
                              </StackPanel>
                           </Button>
                        </StackPanel>
                     </DockPanel>
                  </Border>

                  <!-- Quotes List with Modern Styling -->
                  <ListBox x:Name="QuotesListBox"
                           Grid.Row="1"
                           SelectionMode="Single"
                           Margin="0,0,0,16"
                           Background="Transparent"
                           BorderThickness="0">
                     <ListBox.ItemTemplate>
                        <DataTemplate>
                           <Border Margin="0,6"
                                   Padding="16"
                                   CornerRadius="12"
                                   BorderThickness="1">
                              <Border.Background>
                                 <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="1,0">
                                    <GradientStop Color="#FFFFFF08"
                                          Offset="0"/>
                                    <GradientStop Color="#FFFFFF05"
                                          Offset="1"/>
                                 </LinearGradientBrush>
                              </Border.Background>
                              <Border.BorderBrush>
                                 <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="1,1">
                                    <GradientStop Color="#FFFFFF15"
                                          Offset="0"/>
                                    <GradientStop Color="#FFFFFF05"
                                          Offset="1"/>
                                 </LinearGradientBrush>
                              </Border.BorderBrush>
                              <Border.Style>
                                 <Style TargetType="Border">
                                    <Style.Triggers>
                                       <Trigger Property="IsMouseOver"
                                             Value="True">
                                          <Setter Property="Background">
                                             <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0"
                                                      EndPoint="1,0">
                                                   <GradientStop Color="#FFFFFF12"
                                                         Offset="0"/>
                                                   <GradientStop Color="#FFFFFF08"
                                                         Offset="1"/>
                                                </LinearGradientBrush>
                                             </Setter.Value>
                                          </Setter>
                                       </Trigger>
                                    </Style.Triggers>
                                 </Style>
                              </Border.Style>
                              <StackPanel>
                                 <TextBlock Text="{Binding Text}"
                                            FontSize="15"
                                            FontWeight="Medium"
                                            TextWrapping="Wrap"
                                            Foreground="White"
                                            Margin="0,0,0,10"/>
                                 <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“ "
                                               FontSize="12"
                                               Foreground="#9333EA"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Character}"
                                               FontSize="13"
                                               Foreground="#B0B0B0"
                                               FontStyle="Italic"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <TextBlock Text="ðŸŽ¬ "
                                               FontSize="12"
                                               Foreground="#06B6D4"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Anime}"
                                               FontSize="13"
                                               Foreground="#B0B0B0"
                                               VerticalAlignment="Center"/>
                                 </StackPanel>
                              </StackPanel>
                           </Border>
                        </DataTemplate>
                     </ListBox.ItemTemplate>
                     <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                           <Setter Property="Background" Value="Transparent"/>
                           <Setter Property="BorderThickness" Value="0"/>
                           <Setter Property="Padding" Value="0"/>
                           <Setter Property="Margin" Value="0"/>
                           <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                           <Setter Property="Template">
                              <Setter.Value>
                                 <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                 </ControlTemplate>
                              </Setter.Value>
                           </Setter>
                           <Style.Triggers>
                              <!-- Remove default selection colors (no yellow!) -->
                              <Trigger Property="IsSelected" Value="True">
                                 <Setter Property="Background" Value="Transparent"/>
                              </Trigger>
                              <Trigger Property="IsMouseOver" Value="True">
                                 <Setter Property="Background" Value="Transparent"/>
                              </Trigger>
                           </Style.Triggers>
                        </Style>
                     </ListBox.ItemContainerStyle>
                  </ListBox>

                  <!-- Quote Stats -->
                  <Border Grid.Row="2"
                        Background="#FFFFFF08"
                        CornerRadius="10"
                        Padding="12">
                     <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š"
                              FontSize="16"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Total Quotes: "
                                   FontSize="13"
