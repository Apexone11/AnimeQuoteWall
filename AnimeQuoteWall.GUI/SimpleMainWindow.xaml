<Window x:Class="AnimeQuoteWall.GUI.SimpleMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pages="clr-namespace:AnimeQuoteWall.GUI.Pages"
        Title="Anime Quote Wallpaper Manager"
        Icon="Resources/appicon.ico"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackground}"
        x:Name="MainWindowElement">

    <Window.Resources>
        <!-- Sidebar Navigation Button Style (Window-specific) -->
        <Style x:Key="SidebarNavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="4,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#818CF8" Offset="0"/>
                                            <GradientStop Color="#6366F1" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabControl Style (unused but kept for compatibility) -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Margin="0,0,4,0"
                                CornerRadius="8,8,0,0">
                            <ContentPresenter x:Name="contentPresenter"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="12,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBackground}"/>
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <!-- Modern Sidebar -->
        <Border Grid.Column="0"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,1,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <Border Grid.Row="0"
                        Padding="20,24"
                        Background="Transparent">
                    <StackPanel>
                        <Border Background="{StaticResource PrimaryColor}"
                                CornerRadius="12"
                                Width="48"
                                Height="48"
                                Margin="0,0,0,12"
                                HorizontalAlignment="Left">
                            <Image Source="Resources/appicon.png"
                                   Stretch="Uniform"
                                   Margin="8"/>
                        </Border>
                        <TextBlock Text="Anime Quote"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Wallpaper Manager"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8,8,8,8">
                        <Button x:Name="NavWallpaperButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="Wallpaper">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ–¼" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="Static Generator" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="NavQuotesButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="Quotes">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’­" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="Quotes" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="NavBackgroundsButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="Backgrounds">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ–¼" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="Image Library" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="NavAnimationButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="Animation">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ¬" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="Animated Generator" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="NavAnimatedWallpapersButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="AnimatedWallpapers">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽž" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="Animated Library" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="NavHistoryButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="History">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="History" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="NavPlaylistsButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="Playlists">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‘" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="Playlists" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="NavSettingsButton"
                                Style="{StaticResource SidebarNavButton}"
                                Click="NavButton_Click"
                                Tag="Settings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš™" FontSize="20" Margin="0,0,14,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Padding="20,16"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,1,0,0">
                    <TextBlock Text="v1.2.0"
                               FontSize="11"
                               Foreground="{StaticResource TextTertiary}"
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Border Grid.Row="0"
                        Background="{StaticResource CardBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,0,1"
                        Padding="24,16">
                    <TextBlock x:Name="PageTitleText"
                               Text="Wallpaper"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"/>
                </Border>

                <!-- Content Frame -->
                <Frame x:Name="ContentFrame"
                       Grid.Row="1"
                       NavigationUIVisibility="Hidden"
                       JournalOwnership="OwnsJournal"
                       Background="{StaticResource WindowBackground}"
                       LoadCompleted="ContentFrame_LoadCompleted"/>
        </Grid>
    </Grid>
</Window>
