<Window x:Class="AnimeQuoteWall.GUI.SimpleMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anime Quote Wallpaper Manager"
        Icon="Resources/appicon.ico"
        Height="750"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        x:Name="MainWindowElement">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="WindowBackground" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryDark" Color="#4F46E5"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#818CF8"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessDark" Color="#059669"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="DangerDark" Color="#DC2626"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#64748B"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="TextTertiary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#F1F5F9"/>

        <!-- Modern Button Style with Hover Effects -->
        <Style x:Key="ModernPrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#818CF8" Offset="0"/>
                        <GradientStop Color="#6366F1" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#9CA3F9" Offset="0"/>
                                            <GradientStop Color="#7C7DF3" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#6B73F0" Offset="0"/>
                                            <GradientStop Color="#4F46E5" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSuccessButton" TargetType="Button" BasedOn="{StaticResource ModernPrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#34D399" Offset="0"/>
                        <GradientStop Color="#10B981" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4ADE80" Offset="0"/>
                                            <GradientStop Color="#22C55E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#22C55E" Offset="0"/>
                                            <GradientStop Color="#059669" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDangerButton" TargetType="Button" BasedOn="{StaticResource ModernPrimaryButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F87171" Offset="0"/>
                        <GradientStop Color="#EF4444" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FB7185" Offset="0"/>
                                            <GradientStop Color="#F43F5E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F43F5E" Offset="0"/>
                                            <GradientStop Color="#DC2626" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernSecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernPrimaryButton}">
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E2E8F0"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1E293B" Opacity="0.08" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Margin="0,0,4,0"
                                CornerRadius="8,8,0,0">
                            <ContentPresenter x:Name="contentPresenter"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="12,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CardBackground}"/>
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header with Gradient -->
        <Border Grid.Row="0"
                Margin="0,0,0,24"
                CornerRadius="16"
                Padding="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#818CF8" Offset="0"/>
                    <GradientStop Color="#6366F1" Offset="0.5"/>
                    <GradientStop Color="#4F46E5" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#6366F1" Opacity="0.3" BlurRadius="20" ShadowDepth="4"/>
            </Border.Effect>
            <Grid Margin="28,20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="White" 
                            CornerRadius="10" 
                            Width="48" 
                            Height="48"
                            Margin="0,0,16,0"
                            Padding="8">
                        <Image Source="Resources/appicon.png"
                               Stretch="Uniform"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Anime Quote Wallpaper Manager"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Create beautiful wallpapers from your favorite quotes"
                                   FontSize="13"
                                   Foreground="#E0E7FF"
                                   Margin="0,4,0,0"
                                   Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Tabs -->
        <Border Grid.Row="1"
                Style="{StaticResource ModernCard}"
                Padding="0">
            <TabControl x:Name="MainTabControl">
                <!-- Wallpaper Preview & Generation Tab -->
                <TabItem Header="ðŸ–¼ï¸ Wallpaper">
                    <Grid Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Preview Section Header -->
                        <TextBlock Grid.Row="0"
                                   Text="Wallpaper Preview"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,16"/>

                        <!-- Wallpaper Preview Card -->
                        <Border Grid.Row="1"
                                Background="#F8FAFC"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="2"
                                CornerRadius="12"
                                Margin="0,0,0,24"
                                Padding="4">
                            <Border.Effect>
                                <DropShadowEffect Color="#1E293B" Opacity="0.06" BlurRadius="8" ShadowDepth="1"/>
                            </Border.Effect>
                            <Grid>
                                <Image x:Name="WallpaperPreview"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                <Border x:Name="NoPreviewBorder"
                                        Background="Transparent"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <StackPanel>
                                        <TextBlock Text="ðŸŽ¨"
                                                   FontSize="48"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,12"
                                                   Opacity="0.3"/>
                                        <TextBlock x:Name="NoPreviewText"
                                                   Text="No wallpaper generated yet.&#x0a;Click 'Generate New Wallpaper' to create one!"
                                                   FontSize="15"
                                                   Foreground="{StaticResource TextTertiary}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="400"
                                                   LineHeight="24"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button x:Name="GenerateButton"
                                    Content="âš¡ Generate New Wallpaper"
                                    MinWidth="220"
                                    Height="48"
                                    Click="GenerateButton_Click"
                                    Style="{StaticResource ModernPrimaryButton}"/>
                            <Button x:Name="RefreshButton"
                                    Content="ðŸ”„ Refresh Preview"
                                    MinWidth="160"
                                    Height="48"
                                    Click="RefreshButton_Click"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Margin="12,0,0,0"/>
                            <Button x:Name="ApplyButton"
                                    Content="âœ¨ Apply as Wallpaper"
                                    MinWidth="200"
                                    Height="48"
                                    Click="ApplyButton_Click"
                                    Style="{StaticResource ModernSuccessButton}"
                                    Margin="12,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Quotes Management Tab -->
                <TabItem Header="ðŸ’¬ Quotes">
                    <Grid Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Quotes Header with Actions -->
                        <DockPanel Grid.Row="0"
                                   Margin="0,0,0,16">
                            <TextBlock Text="Quote Library"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       VerticalAlignment="Center"/>
                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Horizontal">
                                <Button x:Name="AddQuoteButton"
                                        Content="âž• Add Quote"
                                        MinWidth="130"
                                        Height="42"
                                        Click="AddQuoteButton_Click"
                                        Style="{StaticResource ModernPrimaryButton}"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="DeleteQuoteButton"
                                        Content="ðŸ—‘ï¸ Delete"
                                        MinWidth="110"
                                        Height="42"
                                        Click="DeleteQuoteButton_Click"
                                        Style="{StaticResource ModernDangerButton}"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </DockPanel>

                        <!-- Quotes List -->
                        <Border Grid.Row="1"
                                Background="#F8FAFC"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Margin="0,0,0,16"
                                Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="QuotesListBox"
                                         SelectionMode="Single"
                                         BorderThickness="0"
                                         Background="Transparent">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="4,6"
                                                    Padding="18"
                                                    Background="{StaticResource CardBackground}"
                                                    BorderBrush="{StaticResource BorderColor}"
                                                    BorderThickness="1"
                                                    CornerRadius="10"
                                                    Cursor="Hand">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#1E293B" Opacity="0.04" BlurRadius="6" ShadowDepth="1"/>
                                                </Border.Effect>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Text}"
                                                               FontSize="15"
                                                               FontWeight="Medium"
                                                               TextWrapping="Wrap"
                                                               Foreground="{StaticResource TextPrimary}"
                                                               LineHeight="24"
                                                               Margin="0,0,0,10"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="â€” "
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource TextSecondary}"
                                                                   FontStyle="Italic"/>
                                                        <TextBlock Text="{Binding Character}"
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource TextSecondary}"
                                                                   FontWeight="SemiBold"
                                                                   FontStyle="Italic"/>
                                                        <TextBlock Text=" Â· "
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource TextTertiary}"
                                                                   Margin="4,0,4,0"/>
                                                        <TextBlock Text="{Binding Anime}"
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource TextTertiary}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Border>

                        <!-- Quote Count -->
                        <TextBlock Grid.Row="2"
                                   x:Name="QuoteCountTextBottom"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontWeight="Medium">
                            <Run Text="Total Quotes: "/>
                            <Run x:Name="QuoteCountRun" Text="0" FontWeight="Bold"/>
                        </TextBlock>
                    </Grid>
                </TabItem>

                <!-- Background Images Tab -->
                <TabItem Header="ðŸŒ„ Backgrounds">
                    <Grid Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Backgrounds Header -->
                        <DockPanel Grid.Row="0"
                                   Margin="0,0,0,16">
                            <TextBlock Text="Background Images"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       VerticalAlignment="Center"/>
                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Horizontal">
                                <Button x:Name="AddBackgroundButton"
                                        Content="âž• Add Images"
                                        MinWidth="140"
                                        Height="42"
                                        Click="AddBackgroundButton_Click"
                                        Style="{StaticResource ModernPrimaryButton}"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="DeleteBackgroundButton"
                                        Content="ðŸ—‘ï¸ Delete"
                                        MinWidth="110"
                                        Height="42"
                                        Click="DeleteBackgroundButton_Click"
                                        Style="{StaticResource ModernDangerButton}"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </DockPanel>

                        <!-- Backgrounds List -->
                        <Border Grid.Row="1"
                                Background="#F8FAFC"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Margin="0,0,0,16"
                                Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="BackgroundsListBox"
                                         SelectionMode="Single"
                                         BorderThickness="0"
                                         Background="Transparent">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="4,6"
                                                    Padding="16"
                                                    Background="{StaticResource CardBackground}"
                                                    BorderBrush="{StaticResource BorderColor}"
                                                    BorderThickness="1"
                                                    CornerRadius="10"
                                                    Cursor="Hand">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#1E293B" Opacity="0.04" BlurRadius="6" ShadowDepth="1"/>
                                                </Border.Effect>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Border Background="{StaticResource PrimaryColor}"
                                                            Width="40"
                                                            Height="40"
                                                            CornerRadius="8"
                                                            Margin="0,0,14,0"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="ðŸ–¼ï¸"
                                                                   FontSize="20"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding}"
                                                               FontSize="14"
                                                               Foreground="{StaticResource TextPrimary}"
                                                               VerticalAlignment="Center"
                                                               FontWeight="Medium"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Border>

                        <!-- Background Count -->
                        <TextBlock Grid.Row="2"
                                   x:Name="BackgroundCountText"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontWeight="Medium">
                            <Run Text="Total Backgrounds: "/>
                            <Run x:Name="BackgroundCountRun" Text="0" FontWeight="Bold"/>
                        </TextBlock>
                    </Grid>
                </TabItem>

                <!-- Settings Tab -->
                <TabItem Header="âš™ï¸ Settings">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
                        <StackPanel>
                            <!-- Theme Settings Card -->
                            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="ðŸŽ¨ Appearance"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,16"/>

                                    <CheckBox x:Name="DarkModeToggle"
                                              Content="Enable Dark Mode (Coming Soon)"
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondary}"
                                              IsEnabled="False"
                                              Padding="8,4"/>

                                    <TextBlock Text="Theme changes will apply immediately after restart"
                                               FontSize="12"
                                               Foreground="{StaticResource TextTertiary}"
                                               Margin="8,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- File Paths Settings Card -->
                            <Border Style="{StaticResource ModernCard}">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“ File Locations"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,20"/>

                                    <!-- Backgrounds Path -->
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="Backgrounds Folder:"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="BackgroundsPathTextBox"
                                                     Grid.Column="0"
                                                     IsReadOnly="True"
                                                     Padding="12"
                                                     Margin="0,0,10,0"
                                                     Background="#F8FAFC"
                                                     BorderBrush="{StaticResource BorderColor}"
                                                     BorderThickness="1"
                                                     FontSize="13"
                                                     Foreground="{StaticResource TextPrimary}"/>
                                            <Button Grid.Column="1"
                                                    Content="ðŸ“‚ Browse"
                                                    MinWidth="120"
                                                    Height="38"
                                                    FontSize="12"
                                                    IsEnabled="False"
                                                    Style="{StaticResource ModernSecondaryButton}"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Quotes Path -->
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="Quotes File:"
                                                   FontSize="13"
                                                   FontWeight="Medium"
