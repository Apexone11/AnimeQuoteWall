<Window x:Class="AnimeQuoteWall.GUI.SimpleMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anime Quote Wallpaper Manager"
        Icon="Resources/appicon.ico"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        x:Name="MainWindowElement">

    <Window.Resources>
        <!-- Light Theme (Default) -->
        <SolidColorBrush x:Key="WindowBackground" Color="#f0f0f0"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="#5E35B1"/>
        <SolidColorBrush x:Key="HeaderForeground" Color="White"/>
        <SolidColorBrush x:Key="ContentBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#ddd"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#333"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666"/>
        <SolidColorBrush x:Key="TextTertiary" Color="#999"/>
        <SolidColorBrush x:Key="ListItemBackground" Color="#fafafa"/>
        <SolidColorBrush x:Key="InputBackground" Color="#f5f5f5"/>
        <SolidColorBrush x:Key="ButtonPrimary" Color="#5E35B1"/>
        <SolidColorBrush x:Key="ButtonSuccess" Color="#43A047"/>
        <SolidColorBrush x:Key="ButtonDanger" Color="#E53935"/>
        <SolidColorBrush x:Key="ButtonSecondary" Color="#757575"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.Background>
            <SolidColorBrush Color="{Binding Source={StaticResource WindowBackground}, Path=Color}"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackground}"
                Padding="20"
                Margin="0,0,0,20"
                CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <Image Source="Resources/appicon.png"
                       Width="32"
                       Height="32"
                       Margin="0,0,15,0"
                       VerticalAlignment="Center"/>
                <TextBlock Text="Anime Quote Wallpaper Manager"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource HeaderForeground}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content Tabs -->
        <TabControl Grid.Row="1"
                    Background="{StaticResource ContentBackground}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">

            <!-- Wallpaper Preview & Generation Tab -->
            <TabItem Header="🖼️ Wallpaper">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Section Header -->
                    <TextBlock Grid.Row="0"
                               Text="Preview"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"
                               Foreground="#333"/>

                    <!-- Wallpaper Preview -->
                    <Border Grid.Row="1"
                            Background="#fafafa"
                            BorderBrush="#ddd"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,0,20">
                        <Grid>
                            <Image x:Name="WallpaperPreview"
                                   Stretch="Uniform"/>
                            <TextBlock x:Name="NoPreviewText"
                                       Text="No wallpaper generated yet. Click 'Generate New Wallpaper' to create one!"
                                       FontSize="14"
                                       Foreground="#999"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       Margin="40"/>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button x:Name="GenerateButton"
                                Content="⚡ Generate New Wallpaper"
                                Width="200"
                                Height="45"
                                FontSize="14"
                                Click="GenerateButton_Click"
                                Background="#5E35B1"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Cursor="Hand"/>
                        <Button x:Name="RefreshButton"
                                Content="🔄 Refresh"
                                Width="120"
                                Height="45"
                                FontSize="14"
                                Click="RefreshButton_Click"
                                Background="#757575"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Cursor="Hand"/>
                        <Button x:Name="ApplyButton"
                                Content="✨ Apply as Wallpaper"
                                Width="180"
                                Height="45"
                                FontSize="14"
                                Click="ApplyButton_Click"
                                Background="#43A047"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Quotes Management Tab -->
            <TabItem Header="💬 Quotes">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Quotes Header with Actions -->
                    <DockPanel Grid.Row="0"
                               Margin="0,0,0,15">
                        <TextBlock Text="Quote Library"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   VerticalAlignment="Center"/>
                        <StackPanel DockPanel.Dock="Right"
                                    Orientation="Horizontal">
                            <Button x:Name="AddQuoteButton"
                                    Content="➕ Add Quote"
                                    Width="120"
                                    Height="38"
                                    FontSize="13"
                                    Click="AddQuoteButton_Click"
                                    Background="#5E35B1"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Cursor="Hand"/>
                            <Button x:Name="DeleteQuoteButton"
                                    Content="🗑️ Delete"
                                    Width="100"
                                    Height="38"
                                    FontSize="13"
                                    Click="DeleteQuoteButton_Click"
                                    Background="#E53935"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </DockPanel>

                    <!-- Quotes List -->
                    <ListBox x:Name="QuotesListBox"
                             Grid.Row="1"
                             SelectionMode="Single"
                             Margin="0,0,0,15"
                             Background="White"
                             BorderBrush="#ddd"
                             BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5"
                                        Padding="15"
                                        Background="#fafafa"
                                        BorderBrush="#e0e0e0"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Text}"
                                                   FontSize="15"
                                                   TextWrapping="Wrap"
                                                   Foreground="#333"
                                                   Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="— "
                                                       FontSize="12"
                                                       Foreground="#666"/>
                                            <TextBlock Text="{Binding Character}"
                                                       FontSize="12"
                                                       Foreground="#666"
                                                       FontWeight="Medium"/>
                                            <TextBlock Text=" ("
                                                       FontSize="12"
                                                       Foreground="#666"
                                                       Margin="5,0,0,0"/>
                                            <TextBlock Text="{Binding Anime}"
                                                       FontSize="12"
                                                       Foreground="#666"/>
                                            <TextBlock Text=")"
                                                       FontSize="12"
                                                       Foreground="#666"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Quote Count -->
                    <TextBlock Grid.Row="2"
                               x:Name="QuoteCountTextBottom"
                               FontSize="13"
                               Foreground="#666"/>
                </Grid>
            </TabItem>

            <!-- Background Images Tab -->
            <TabItem Header="🌄 Backgrounds">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Backgrounds Header -->
                    <DockPanel Grid.Row="0"
                               Margin="0,0,0,15">
                        <TextBlock Text="Background Images"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   VerticalAlignment="Center"/>
                        <StackPanel DockPanel.Dock="Right"
                                    Orientation="Horizontal">
                            <Button x:Name="AddBackgroundButton"
                                    Content="➕ Add Images"
                                    Width="130"
                                    Height="38"
                                    FontSize="13"
                                    Click="AddBackgroundButton_Click"
                                    Background="#5E35B1"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Cursor="Hand"/>
                            <Button x:Name="DeleteBackgroundButton"
                                    Content="🗑️ Delete"
                                    Width="100"
                                    Height="38"
                                    FontSize="13"
                                    Click="DeleteBackgroundButton_Click"
                                    Background="#E53935"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </DockPanel>

                    <!-- Backgrounds List -->
                    <ListBox x:Name="BackgroundsListBox"
                             Grid.Row="1"
                             SelectionMode="Single"
                             Margin="0,0,0,15"
                             Background="White"
                             BorderBrush="#ddd"
                             BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5"
                                        Padding="12"
                                        Background="#fafafa"
                                        BorderBrush="#e0e0e0"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🖼️"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}"
                                                   FontSize="13"
                                                   Foreground="#333"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Background Count -->
                    <TextBlock Grid.Row="2"
                               x:Name="BackgroundCountText"
                               FontSize="13"
                               Foreground="#666"/>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="⚙️ Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Theme Settings -->
                        <Border Grid.Row="0"
                                Background="White"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                Padding="20"
                                Margin="0,0,0,20"
                                CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="🎨 Appearance"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#333"
                                           Margin="0,0,0,15"/>

                                <CheckBox x:Name="DarkModeToggle"
                                          Content="Enable Dark Mode (Coming Soon)"
                                          FontSize="14"
                                          Margin="0,0,0,10"
                                          IsEnabled="False"/>

                                <TextBlock Text="Changes will apply immediately"
                                           FontSize="11"
                                           Foreground="#999"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- File Paths Settings -->
                        <Border Grid.Row="1"
                                Background="White"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                Padding="20"
                                Margin="0,0,0,20"
                                CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="📁 File Locations"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#333"
                                           Margin="0,0,0,15"/>

                                <!-- Backgrounds Path -->
                                <TextBlock Text="Backgrounds Folder:"
                                           FontSize="13"
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="BackgroundsPathTextBox"
                                             Grid.Column="0"
                                             IsReadOnly="True"
                                             Padding="10"
                                             Margin="0,0,10,0"
                                             Background="#f5f5f5"
                                             BorderBrush="#ddd"
                                             BorderThickness="1"/>
                                    <Button Grid.Column="1"
                                            Content="📂 Browse... (Coming Soon)"
                                            Width="160"
                                            Height="32"
                                            FontSize="12"
                                            IsEnabled="False"
                                            Background="#5E35B1"
                                            Foreground="White"
                                            BorderThickness="0"/>
                                </Grid>

                                <!-- Quotes Path -->
                                <TextBlock Text="Quotes File:"
                                           FontSize="13"
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="QuotesPathTextBox"
                                             Grid.Column="0"
                                             IsReadOnly="True"
                                             Padding="10"
                                             Margin="0,0,10,0"
                                             Background="#f5f5f5"
                                             BorderBrush="#ddd"
                                             BorderThickness="1"/>
                                    <Button Grid.Column="1"
                                            Content="📄 Browse... (Coming Soon)"
                                            Width="160"
                                            Height="32"
                                            FontSize="12"
                                            IsEnabled="False"
                                            Background="#5E35B1"
                                            Foreground="White"
                                            BorderThickness="0"/>
                                </Grid>

                                <Button Content="🔄 Reset to Defaults (Coming Soon)"
                                        Width="230"
                                        Height="35"
                                        FontSize="12"
                                        IsEnabled="False"
                                        Background="#757575"
                                        Foreground="White"
                                        BorderThickness="0"
                                        HorizontalAlignment="Left"/>

                                <TextBlock Text="⚠️ Changing paths will restart the application"
                                           FontSize="11"
                                           Foreground="#ff9800"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Information -->
                        <Border Grid.Row="2"
                                Background="#e3f2fd"
                                BorderBrush="#2196f3"
                                BorderThickness="1"
                                Padding="15"
                                CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="ℹ️ Default Locations"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#1976d2"
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="DefaultPathsInfo"
                                           FontSize="12"
                                           Foreground="#555"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Grid>
</Window>