<Page x:Class="AnimeQuoteWall.GUI.Pages.PlaylistsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Playlists">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Playlists Header with Actions -->
        <Grid Grid.Row="0"
              Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Playlists"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="CreatePlaylistButton"
                        MinWidth="140"
                        Height="40"
                        Click="CreatePlaylistButton_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,10,0"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="New Playlist" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="EditPlaylistButton"
                        MinWidth="110"
                        Height="40"
                        Click="EditPlaylistButton_Click"
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,10,0"
                        Padding="14,9"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="PencilOutline" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Edit" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeletePlaylistButton"
                        MinWidth="110"
                        Height="40"
                        Click="DeletePlaylistButton_Click"
                        Style="{StaticResource ModernDangerButton}"
                        Padding="14,9"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="DeleteOutline" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Playlists List -->
        <Border Grid.Row="1"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="12"
                Margin="0,0,0,12"
                Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="PlaylistsListBox"
                         SelectionMode="Single"
                         BorderThickness="0"
                         Background="Transparent"
                         SelectionChanged="PlaylistsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="3,4"
                                    Padding="14"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1E293B" Opacity="0.04" BlurRadius="6" ShadowDepth="1"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimary}"/>
                                            <TextBlock Text=" ● "
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextTertiary}"
                                                       Margin="8,0,0,0"/>
                                            <TextBlock Text="{Binding ScheduleType}"
                                                       FontSize="13"
                                                       Foreground="{StaticResource TextSecondary}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding WallpaperEntries.Count, StringFormat='{}{0} wallpapers'}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,0,0,6"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="12"
                                                       Foreground="{StaticResource TextTertiary}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} - {1}">
                                                        <Binding Path="ScheduleType"/>
                                                        <Binding Path="IntervalSeconds" StringFormat="{}{0}s"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock Text=" ● "
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextTertiary}"
                                                       Margin="8,0,8,0"/>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Disabled"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Enabled}" Value="True">
                                                                <Setter Property="Text" Value="Enabled"/>
                                                                <Setter Property="Foreground" Value="#10B981"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <ToggleButton x:Name="EnableToggleButton"
                                                  Grid.Column="1"
                                                  IsChecked="{Binding Enabled}"
                                                  Click="EnableToggleButton_Click"
                                                  Tag="{Binding}"
                                                  Width="50"
                                                  Height="28"
                                                  VerticalAlignment="Center"
                                                  Style="{StaticResource ModernToggleButton}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Playlist Count -->
        <TextBlock Grid.Row="2"
                   x:Name="PlaylistCountText"
                   FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   FontWeight="Medium"
                   Margin="0,4,0,0">
            <Run Text="Total Playlists: "/>
            <Run x:Name="PlaylistCountRun" Text="0" FontWeight="Bold"/>
        </TextBlock>
    </Grid>
</Page>

