<Page x:Class="AnimeQuoteWall.GUI.Pages.QuotesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Quotes">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Quotes Header with Actions -->
        <Grid Grid.Row="0"
              Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Quote Library"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="AddQuoteButton"
                        MinWidth="140"
                        Height="40"
                        Click="AddQuoteButton_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,10,0"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Quote" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteQuoteButton"
                        MinWidth="110"
                        Height="40"
                        Click="DeleteQuoteButton_Click"
                        Style="{StaticResource ModernDangerButton}"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="DeleteOutline" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Filter Controls -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,12"
                    HorizontalAlignment="Left">
            <ComboBox x:Name="CategoryFilterComboBox"
                      Width="180"
                      Height="36"
                      Margin="0,0,12,0"
                      SelectionChanged="CategoryFilterComboBox_SelectionChanged"
                      Style="{StaticResource ModernComboBox}">
                <ComboBoxItem Content="All Categories" Tag=""/>
            </ComboBox>
            <ComboBox x:Name="SortComboBox"
                      Width="150"
                      Height="36"
                      Margin="0,0,12,0"
                      SelectionChanged="SortComboBox_SelectionChanged"
                      Style="{StaticResource ModernComboBox}">
                <ComboBoxItem Content="Default" Tag="Default"/>
                <ComboBoxItem Content="Rating" Tag="Rating"/>
                <ComboBoxItem Content="Favorites First" Tag="Favorites"/>
            </ComboBox>
            <CheckBox x:Name="FavoritesOnlyCheckBox"
                      Content="Favorites Only"
                      VerticalAlignment="Center"
                      Checked="FavoritesOnlyCheckBox_Checked"
                      Unchecked="FavoritesOnlyCheckBox_Unchecked"
                      Margin="0,0,12,0"/>
        </StackPanel>

        <!-- Quotes List -->
        <Border Grid.Row="2"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="16"
                Margin="0,0,0,12"
                Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="QuotesListBox"
                         SelectionMode="Single"
                         BorderThickness="0"
                         Background="Transparent"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.CanContentScroll="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="4,6"
                                    Padding="16"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="8" ShadowDepth="1"/>
                                </Border.Effect>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Button Click="FavoriteButton_Click"
                                                Tag="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="18"
                                                Padding="4"
                                                Cursor="Hand"
                                                ToolTip="Toggle Favorite">
                                            <iconPacks:PackIconMaterial Width="18" Height="18" VerticalAlignment="Center">
                                                <iconPacks:PackIconMaterial.Style>
                                                    <Style TargetType="iconPacks:PackIconMaterial">
                                                        <Setter Property="Kind" Value="HeartOutline"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                <Setter Property="Kind" Value="Heart"/>
                                                                <Setter Property="Foreground" Value="#EF4444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </iconPacks:PackIconMaterial.Style>
                                            </iconPacks:PackIconMaterial>
                                        </Button>
                                        <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                                            <TextBlock Text="★" FontSize="14" Foreground="{StaticResource TextTertiary}" Margin="0,0,2,0"/>
                                            <TextBlock Text="{Binding Rating}" FontSize="12" Foreground="{StaticResource TextTertiary}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Text}"
                                               FontSize="15"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource TextPrimary}"
                                               LineHeight="24"
                                               Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="— "
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontStyle="Italic"/>
                                        <TextBlock Text="{Binding Character}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   FontWeight="SemiBold"
                                                   FontStyle="Italic"/>
                                        <TextBlock Text=" · "
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextTertiary}"
                                                   Margin="4,0,4,0"/>
                                        <TextBlock Text="{Binding Anime}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <ItemsControl ItemsSource="{Binding Categories}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{StaticResource PrimaryColor}"
                                                            CornerRadius="6"
                                                            Padding="8,4"
                                                            Margin="0,0,6,0">
                                                        <TextBlock Text="{Binding}" FontSize="10" Foreground="White" RenderOptions.BitmapScalingMode="HighQuality" TextOptions.TextRenderingMode="ClearType"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Quote Count -->
        <TextBlock Grid.Row="3"
                   x:Name="QuoteCountTextBottom"
                   FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   FontWeight="Medium"
                   Margin="0,4,0,0">
            <Run Text="Total Quotes: "/>
            <Run x:Name="QuoteCountRun" Text="0" FontWeight="Bold"/>
        </TextBlock>
    </Grid>
</Page>

