<Page x:Class="AnimeQuoteWall.GUI.Pages.BackgroundsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:AnimeQuoteWall.GUI.Converters"
      Title="Image Library">
    <Page.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>
    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Backgrounds Header -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,12">
            <TextBlock Text="Background Images"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"/>
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal">
                <Button x:Name="AddBackgroundButton"
                        MinWidth="150"
                        Height="40"
                        Click="AddBackgroundButton_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,10,0"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âž•" FontSize="15" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Add Images" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteBackgroundButton"
                        MinWidth="110"
                        Height="40"
                        Click="DeleteBackgroundButton_Click"
                        Style="{StaticResource ModernDangerButton}"
                        Margin="10,0,0,0"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘" FontSize="15" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Backgrounds List -->
        <Border Grid.Row="1"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="12"
                Margin="0,0,0,12"
                Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="BackgroundsListBox"
                         SelectionMode="Single"
                         BorderThickness="0"
                         Background="Transparent"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.CanContentScroll="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="3,4"
                                    Padding="10"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1E293B" Opacity="0.04" BlurRadius="6" ShadowDepth="1"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Background="{StaticResource HoverBackground}"
                                            Width="120"
                                            Height="80"
                                            CornerRadius="8"
                                            Margin="0,0,14,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                        <Border ClipToBounds="True" CornerRadius="8">
                                            <Image Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Width="120"
                                                   Height="80">
                                                <Image.Source>
                                                    <Binding Path="ImagePath" Converter="{StaticResource ImagePathConverter}"/>
                                                </Image.Source>
                                            </Image>
                                        </Border>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   FontWeight="Medium"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding FileSize}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Background Count -->
        <TextBlock Grid.Row="2"
                   x:Name="BackgroundCountText"
                   FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   FontWeight="Medium"
                   Margin="0,4,0,0">
            <Run Text="Total Backgrounds: "/>
            <Run x:Name="BackgroundCountRun" Text="0" FontWeight="Bold"/>
        </TextBlock>
    </Grid>
</Page>

