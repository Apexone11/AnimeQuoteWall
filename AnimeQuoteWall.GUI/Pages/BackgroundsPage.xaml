<Page x:Class="AnimeQuoteWall.GUI.Pages.BackgroundsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:AnimeQuoteWall.GUI.Converters"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Image Library">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Backgrounds Header -->
        <Grid Grid.Row="0"
              Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Background Images"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="AddBackgroundButton"
                        MinWidth="150"
                        Height="40"
                        Click="AddBackgroundButton_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,10,0"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Images" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteBackgroundButton"
                        MinWidth="110"
                        Height="40"
                        Click="DeleteBackgroundButton_Click"
                        Style="{StaticResource ModernDangerButton}"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="DeleteOutline" Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Backgrounds List -->
        <Border Grid.Row="1"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="16"
                Margin="0,0,0,12"
                Padding="12">
            <Grid>
                <!-- Loading Indicator -->
                <Border x:Name="LoadingIndicator"
                        Background="{StaticResource HoverBackground}"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Loading backgrounds..."
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <ProgressBar Width="200"
                                     Height="6"
                                     IsIndeterminate="True"
                                     VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Empty State -->
                <Border x:Name="EmptyStateBorder"
                        Background="Transparent"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="ImageOutline"
                                                    Width="64"
                                                    Height="64"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,16"
                                                    Foreground="{StaticResource TextTertiary}"
                                                    Opacity="0.3"/>
                        <TextBlock Text="No background images found"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Click 'Add Images' to add background images to your library"
                                   FontSize="13"
                                   Foreground="{StaticResource TextTertiary}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="400"/>
                    </StackPanel>
                </Border>

                <!-- Backgrounds List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="Visible">
                    <ListBox x:Name="BackgroundsListBox"
                             SelectionMode="Single"
                             BorderThickness="0"
                             Background="Transparent"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ScrollViewer.CanContentScroll="True">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Height" Value="100"/>
                                <Setter Property="Margin" Value="0,2"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="4,6"
                                        Padding="12"
                                        Background="{StaticResource CardBackground}"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Cursor="Hand"
                                        Height="92">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="8" ShadowDepth="1"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Background="{StaticResource HoverBackground}"
                                                Width="120"
                                                Height="80"
                                                CornerRadius="10"
                                                Margin="0,0,14,0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                            <Border ClipToBounds="True" CornerRadius="10">
                                                <Image Stretch="UniformToFill"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Width="120"
                                                       Height="80"
                                                       RenderOptions.BitmapScalingMode="HighQuality">
                                                    <Image.Source>
                                                        <Binding Path="ImagePath" Converter="{StaticResource ImagePathConverter}"/>
                                                    </Image.Source>
                                                </Image>
                                            </Border>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       FontWeight="Medium"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding FileSize}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextTertiary}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Background Count -->
        <TextBlock Grid.Row="2"
                   x:Name="BackgroundCountText"
                   FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   FontWeight="Medium"
                   Margin="0,4,0,0">
            <Run Text="Total Backgrounds: "/>
            <Run x:Name="BackgroundCountRun" Text="0" FontWeight="Bold"/>
        </TextBlock>
    </Grid>
</Page>

