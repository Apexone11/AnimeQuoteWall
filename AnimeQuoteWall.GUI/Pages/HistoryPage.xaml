<Page x:Class="AnimeQuoteWall.GUI.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="History">
    <Grid Margin="24,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="400"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextPrimary}"
                   Margin="0,0,0,20">
            <Run Text="ðŸ“‹" FontFamily="Segoe UI Emoji"/>
            <Run Text=" Wallpaper History"/>
        </TextBlock>

        <!-- History Grid -->
        <Border Grid.Row="1"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="HistoryItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="8"
                                    Padding="8"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="HistoryItem_MouseLeftButtonDown">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1E293B" Opacity="0.04" BlurRadius="6" ShadowDepth="1"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Image Source="{Binding ThumbnailPath}"
                                           Stretch="Uniform"
                                           Height="120"
                                           Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:g}'}"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                        <Button Click="RestoreButton_Click"
                                                Tag="{Binding Entry}"
                                                Style="{StaticResource ModernPrimaryButton}"
                                                Padding="10,6"
                                                Margin="0,0,6,0"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="â†»" FontSize="14" Margin="0,0,4,0"/>
                                                <TextBlock Text="Restore" VerticalAlignment="Center" FontSize="12"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Click="DeleteButton_Click"
                                                Tag="{Binding Entry}"
                                                Style="{StaticResource ModernDangerButton}"
                                                Padding="10,6"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ—‘" FontSize="12" Margin="0,0,4,0" FontFamily="Segoe UI Emoji"/>
                                                <TextBlock Text="Delete" VerticalAlignment="Center" FontSize="12"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>

