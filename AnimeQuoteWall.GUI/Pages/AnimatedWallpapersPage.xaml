<Page x:Class="AnimeQuoteWall.GUI.Pages.AnimatedWallpapersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:AnimeQuoteWall.GUI.Converters"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Animated Wallpapers">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ImagePathConverter x:Key="ImagePathConverter"/>
            <converters:FormatToVisibilityConverter x:Key="FormatToVisibilityConverter"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Read-Only Banner -->
        <Border Grid.Row="0"
                Background="#1E3A5F"
                BorderBrush="#3B82F6"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="InformationOutline" 
                                            Width="20" 
                                            Height="20" 
                                            Foreground="#60A5FA"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Animated Library is Read-Only" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#E0F2FE"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="This feature is temporarily read-only for stability. You can view and manage your animated wallpapers, but applying them is disabled until the next update." 
                               FontSize="12" 
                               Foreground="#BFDBFE"
                               TextWrapping="Wrap"
                               MaxWidth="800"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Header -->
        <DockPanel Grid.Row="1"
                   Margin="0,0,0,24">
            <TextBlock Text="Animated Wallpapers Library"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       TextOptions.TextRenderingMode="ClearType"/>
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Button x:Name="AddAnimatedButton"
                        MinWidth="160"
                        Height="42"
                        Click="AddAnimatedButton_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,12,0"
                        Padding="16,10"
                        IsEnabled="False"
                        ToolTip="Add new animated wallpapers (MP4, WebM, MOV, GIF) - Temporarily disabled">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Plus" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        <TextBlock Text="Add Animated" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Border Background="{StaticResource HoverBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="0"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <ComboBox x:Name="MonitorSelectionComboBox"
                              Width="240"
                              Height="42"
                              VerticalContentAlignment="Center"
                              FontSize="13"
                              Style="{StaticResource ModernComboBox}"
                              ToolTip="Select which monitor to apply the animated wallpaper to">
                        <ComboBoxItem Content="Use Settings Default" Tag="Default" IsSelected="True"/>
                    </ComboBox>
                </Border>
                <Button x:Name="ApplyAnimatedButton"
                        MinWidth="150"
                        Height="42"
                        Click="ApplyAnimatedButton_Click"
                        Style="{StaticResource ModernSuccessButton}"
                        Margin="0,0,12,0"
                        Padding="16,10"
                        IsEnabled="False"
                        ToolTip="Apply the selected animated wallpaper to your desktop">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="PlayCircleOutline" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        <TextBlock Text="Apply" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RemoveAnimatedButton"
                        MinWidth="140"
                        Height="42"
                        Click="RemoveAnimatedButton_Click"
                        Style="{StaticResource ModernSecondaryButton}"
                        Margin="0,0,12,0"
                        Padding="16,10"
                        ToolTip="Remove the applied animated wallpaper and revert to previous static wallpaper">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="StopCircleOutline" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        <TextBlock Text="Remove" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteAnimatedButton"
                        MinWidth="120"
                        Height="42"
                        Click="DeleteAnimatedButton_Click"
                        Style="{StaticResource ModernDangerButton}"
                        Margin="0,0,0,0"
                        Padding="16,10"
                        IsEnabled="False"
                        ToolTip="Delete the selected animated wallpaper from your library - Temporarily disabled">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="DeleteOutline" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Animated Wallpapers Grid -->
        <Border Grid.Row="2"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="16"
                Margin="0,0,0,12"
                Padding="12">
            <Grid>
                <!-- Loading Indicator -->
                <Border x:Name="LoadingIndicator"
                        Background="{StaticResource HoverBackground}"
                        Visibility="Collapsed"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="ProgressClock" Width="48" Height="48" HorizontalAlignment="Center" Margin="0,0,0,12" Opacity="0.5"/>
                        <TextBlock Text="Loading animated wallpapers..."
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              x:Name="ContentScrollViewer"
                              SizeChanged="ContentScrollViewer_SizeChanged">
                    <ItemsControl x:Name="AnimatedWallpapersItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid x:Name="AnimatedGrid" Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ItemBorder"
                                    Margin="8"
                                    Padding="0"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="2"
                                    CornerRadius="12"
                                    Cursor="Hand"
                                    MouseEnter="AnimatedItem_MouseEnter"
                                    MouseLeave="AnimatedItem_MouseLeave"
                                    MouseLeftButtonUp="AnimatedItem_MouseLeftButtonUp">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1E293B" Opacity="0.06" BlurRadius="8" ShadowDepth="2"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#818CF8"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#818CF8" Opacity="0.3" BlurRadius="12" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <Border Background="{StaticResource HoverBackground}"
                                            Height="200"
                                            CornerRadius="10,10,0,0"
                                            Margin="0"
                                            ClipToBounds="True">
                                        <Grid>
                                            <!-- Thumbnail Image -->
                                            <Image Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   RenderOptions.CachingHint="Cache"
                                                   SnapsToDevicePixels="True">
                                                <Image.Source>
                                                    <Binding Path="PreviewPath" Converter="{StaticResource ImagePathConverter}"/>
                                                </Image.Source>
                                            </Image>
                                            <!-- Gradient overlay for better text visibility -->
                                            <Border Background="#00000000">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                    <GradientStop Color="#00000000" Offset="0.6"/>
                                                                    <GradientStop Color="#80000000" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <!-- Play icon overlay for videos -->
                                            <Border Background="#60000000"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    CornerRadius="50"
                                                    Width="70"
                                                    Height="70"
                                                    Opacity="0.9">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Format, Converter={StaticResource FormatToVisibilityConverter}}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#000000" Opacity="0.5" BlurRadius="8" ShadowDepth="2"/>
                                                </Border.Effect>
                                                <iconPacks:PackIconMaterial Kind="PlayCircleOutline"
                                                                            Width="36"
                                                                            Height="36"
                                                                            Foreground="White"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Format badge -->
                                            <Border Background="#CC6366F1"
                                                    CornerRadius="0,0,8,0"
                                                    VerticalAlignment="Top"
                                                    HorizontalAlignment="Left"
                                                    Padding="10,6"
                                                    Margin="0">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#6366F1" Opacity="0.4" BlurRadius="4" ShadowDepth="1"/>
                                                </Border.Effect>
                                                <TextBlock Text="{Binding Format}"
                                                           FontSize="11"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <Border Padding="12,10"
                                            Background="{StaticResource CardBackground}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,8"
                                                       MaxHeight="40"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,4">
                                                <iconPacks:PackIconMaterial Kind="PackageVariant" Width="12" Height="12" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding FileSize}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondary}"
                                                           Margin="0,0,12,0"/>
                                                <iconPacks:PackIconMaterial Kind="TimerOutline" Width="12" Height="12" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Duration}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondary}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Count -->
        <TextBlock Grid.Row="3"
                   x:Name="AnimatedCountText"
                   FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   FontWeight="Medium"
                   Margin="0,4,0,0">
            <Run Text="Total Animated Wallpapers: "/>
            <Run x:Name="AnimatedCountRun" Text="0" FontWeight="Bold"/>
        </TextBlock>
    </Grid>
</Page>

