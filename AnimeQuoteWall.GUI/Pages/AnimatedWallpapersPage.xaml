<Page x:Class="AnimeQuoteWall.GUI.Pages.AnimatedWallpapersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:AnimeQuoteWall.GUI.Converters"
      Title="Animated Wallpapers">
    <Page.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:FormatToVisibilityConverter x:Key="FormatToVisibilityConverter"/>
    </Page.Resources>
    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,12">
            <TextBlock Text="Animated Wallpapers Library"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"/>
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal">
                <Button x:Name="AddAnimatedButton"
                        MinWidth="150"
                        Height="40"
                        Click="AddAnimatedButton_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,10,0"
                        Padding="14,9">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âž•" FontSize="15" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Add Animated" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ApplyAnimatedButton"
                        MinWidth="140"
                        Height="40"
                        Click="ApplyAnimatedButton_Click"
                        Style="{StaticResource ModernSuccessButton}"
                        Margin="10,0,10,0"
                        Padding="14,9"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ¨" FontSize="15" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Apply" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteAnimatedButton"
                        MinWidth="110"
                        Height="40"
                        Click="DeleteAnimatedButton_Click"
                        Style="{StaticResource ModernDangerButton}"
                        Margin="10,0,0,0"
                        Padding="14,9"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘" FontSize="15" Margin="0,0,6,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Animated Wallpapers Grid -->
        <Border Grid.Row="1"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="12"
                Margin="0,0,0,12"
                Padding="8">
            <Grid>
                <!-- Loading Indicator -->
                <Border x:Name="LoadingIndicator"
                        Background="{StaticResource HoverBackground}"
                        Visibility="Collapsed"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="â³"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"
                                   Opacity="0.5"/>
                        <TextBlock Text="Loading animated wallpapers..."
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="ContentScrollViewer">
                    <ItemsControl x:Name="AnimatedWallpapersItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="6"
                                    Padding="10"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Cursor="Hand"
                                    MouseEnter="AnimatedItem_MouseEnter"
                                    MouseLeave="AnimatedItem_MouseLeave"
                                    MouseLeftButtonUp="AnimatedItem_MouseLeftButtonUp">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1E293B" Opacity="0.04" BlurRadius="6" ShadowDepth="1"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Border Background="{StaticResource HoverBackground}"
                                            Height="180"
                                            CornerRadius="8"
                                            Margin="0,0,0,10"
                                            ClipToBounds="True">
                                        <Grid>
                                            <!-- Thumbnail Image -->
                                            <Image Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   RenderOptions.CachingHint="Cache"
                                                   SnapsToDevicePixels="True">
                                                <Image.Source>
                                                    <Binding Path="PreviewPath" Converter="{StaticResource ImagePathConverter}"/>
                                                </Image.Source>
                                            </Image>
                                            <!-- Play icon overlay for videos -->
                                            <Border Background="#40000000"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    CornerRadius="50"
                                                    Width="60"
                                                    Height="60"
                                                    Opacity="0.8">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Format, Converter={StaticResource FormatToVisibilityConverter}}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="â–¶"
                                                           FontSize="24"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontFamily="Segoe UI Symbol"/>
                                            </Border>
                                            <Border Background="#80000000"
                                                    CornerRadius="8,8,0,0"
                                                    VerticalAlignment="Top"
                                                    HorizontalAlignment="Stretch"
                                                    Padding="6,4">
                                                <TextBlock Text="{Binding Format}"
                                                           FontSize="10"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <TextBlock Text="{Binding FileName}"
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimary}"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding FileSize}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextTertiary}"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Duration}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextTertiary}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Count -->
        <TextBlock Grid.Row="2"
                   x:Name="AnimatedCountText"
                   FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   FontWeight="Medium"
                   Margin="0,4,0,0">
            <Run Text="Total Animated Wallpapers: "/>
            <Run x:Name="AnimatedCountRun" Text="0" FontWeight="Bold"/>
        </TextBlock>
    </Grid>
</Page>

