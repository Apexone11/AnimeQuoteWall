<Page x:Class="AnimeQuoteWall.GUI.Pages.AnimatedWallpapersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:AnimeQuoteWall.GUI.Converters"
      Title="Animated Wallpapers">
    <Page.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:FormatToVisibilityConverter x:Key="FormatToVisibilityConverter"/>
    </Page.Resources>
    <Grid Margin="20,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,16">
            <TextBlock Text="Animated Wallpapers Library"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"/>
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Button x:Name="AddAnimatedButton"
                        MinWidth="160"
                        Height="42"
                        Click="AddAnimatedButton_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Margin="0,0,12,0"
                        Padding="16,10"
                        ToolTip="Add new animated wallpapers (MP4, WebM, MOV, GIF)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âž•" FontSize="16" Margin="0,0,8,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Add Animated" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Border Background="{StaticResource HoverBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="0"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <ComboBox x:Name="MonitorSelectionComboBox"
                              Width="240"
                              Height="42"
                              VerticalContentAlignment="Center"
                              FontSize="13"
                              Background="Transparent"
                              BorderThickness="0"
                              Padding="12,0"
                              ToolTip="Select which monitor to apply the animated wallpaper to">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="FontSize" Value="13"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBoxItem Content="Use Settings Default" Tag="Default" IsSelected="True"/>
                    </ComboBox>
                </Border>
                <Button x:Name="ApplyAnimatedButton"
                        MinWidth="150"
                        Height="42"
                        Click="ApplyAnimatedButton_Click"
                        Style="{StaticResource ModernSuccessButton}"
                        Margin="0,0,12,0"
                        Padding="16,10"
                        IsEnabled="False"
                        ToolTip="Apply the selected animated wallpaper to your desktop">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ¨" FontSize="16" Margin="0,0,8,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Apply" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteAnimatedButton"
                        MinWidth="120"
                        Height="42"
                        Click="DeleteAnimatedButton_Click"
                        Style="{StaticResource ModernDangerButton}"
                        Margin="0,0,0,0"
                        Padding="16,10"
                        IsEnabled="False"
                        ToolTip="Delete the selected animated wallpaper from your library">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘ï¸" FontSize="16" Margin="0,0,8,0" FontFamily="Segoe UI Emoji"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Animated Wallpapers Grid -->
        <Border Grid.Row="1"
                Background="{StaticResource HoverBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="12"
                Margin="0,0,0,12"
                Padding="8">
            <Grid>
                <!-- Loading Indicator -->
                <Border x:Name="LoadingIndicator"
                        Background="{StaticResource HoverBackground}"
                        Visibility="Collapsed"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="â³"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"
                                   Opacity="0.5"/>
                        <TextBlock Text="Loading animated wallpapers..."
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="ContentScrollViewer">
                    <ItemsControl x:Name="AnimatedWallpapersItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ItemBorder"
                                    Margin="8"
                                    Padding="0"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="2"
                                    CornerRadius="12"
                                    Cursor="Hand"
                                    MouseEnter="AnimatedItem_MouseEnter"
                                    MouseLeave="AnimatedItem_MouseLeave"
                                    MouseLeftButtonUp="AnimatedItem_MouseLeftButtonUp">
                                <Border.Effect>
                                    <DropShadowEffect Color="#1E293B" Opacity="0.06" BlurRadius="8" ShadowDepth="2"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#818CF8"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#818CF8" Opacity="0.3" BlurRadius="12" ShadowDepth="0"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <Border Background="{StaticResource HoverBackground}"
                                            Height="200"
                                            CornerRadius="10,10,0,0"
                                            Margin="0"
                                            ClipToBounds="True">
                                        <Grid>
                                            <!-- Thumbnail Image -->
                                            <Image Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   RenderOptions.CachingHint="Cache"
                                                   SnapsToDevicePixels="True">
                                                <Image.Source>
                                                    <Binding Path="PreviewPath" Converter="{StaticResource ImagePathConverter}"/>
                                                </Image.Source>
                                            </Image>
                                            <!-- Gradient overlay for better text visibility -->
                                            <Border Background="#00000000">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                    <GradientStop Color="#00000000" Offset="0.6"/>
                                                                    <GradientStop Color="#80000000" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <!-- Play icon overlay for videos -->
                                            <Border Background="#60000000"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    CornerRadius="50"
                                                    Width="70"
                                                    Height="70"
                                                    Opacity="0.9">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Format, Converter={StaticResource FormatToVisibilityConverter}}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#000000" Opacity="0.5" BlurRadius="8" ShadowDepth="2"/>
                                                </Border.Effect>
                                                <TextBlock Text="â–¶"
                                                           FontSize="28"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontFamily="Segoe UI Symbol"
                                                           Margin="4,0,0,0"/>
                                            </Border>
                                            <!-- Format badge -->
                                            <Border Background="#CC6366F1"
                                                    CornerRadius="0,0,8,0"
                                                    VerticalAlignment="Top"
                                                    HorizontalAlignment="Left"
                                                    Padding="10,6"
                                                    Margin="0">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#6366F1" Opacity="0.4" BlurRadius="4" ShadowDepth="1"/>
                                                </Border.Effect>
                                                <TextBlock Text="{Binding Format}"
                                                           FontSize="11"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <Border Padding="12,10"
                                            Background="{StaticResource CardBackground}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,8"
                                                       MaxHeight="40"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,4">
                                                <TextBlock Text="ðŸ“¦"
                                                           FontSize="11"
                                                           Margin="0,0,4,0"
                                                           FontFamily="Segoe UI Emoji"/>
                                                <TextBlock Text="{Binding FileSize}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondary}"
                                                           Margin="0,0,12,0"/>
                                                <TextBlock Text="â±ï¸"
                                                           FontSize="11"
                                                           Margin="0,0,4,0"
                                                           FontFamily="Segoe UI Emoji"/>
                                                <TextBlock Text="{Binding Duration}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextSecondary}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Count -->
        <TextBlock Grid.Row="2"
                   x:Name="AnimatedCountText"
                   FontSize="14"
                   Foreground="{StaticResource TextSecondary}"
                   FontWeight="Medium"
                   Margin="0,4,0,0">
            <Run Text="Total Animated Wallpapers: "/>
            <Run x:Name="AnimatedCountRun" Text="0" FontWeight="Bold"/>
        </TextBlock>
    </Grid>
</Page>

