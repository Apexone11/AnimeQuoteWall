<Window x:Class="AnimeQuoteWall.GUI.SimpleMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anime Quote Wallpaper Manager"
        Height="700"
      Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

   <Grid Margin="20">
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <!-- Header -->
      <Border Grid.Row="0"
            Background="#673AB7"
            Padding="16"
              Margin="0,0,0,20"
            CornerRadius="4">
         <StackPanel Orientation="Horizontal">
            <TextBlock Text="ðŸŽ¨"
                  FontSize="32"
                  VerticalAlignment="Center"
                  Margin="0,0,16,0"/>
            <TextBlock Text="Anime Quote Wallpaper Manager"
                       FontSize="24"
                  FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
         </StackPanel>
      </Border>

      <!-- Main Content Tabs -->
      <TabControl Grid.Row="1"
            Background="White"
            Padding="10">

         <!-- Wallpaper Preview & Generation Tab -->
         <TabItem Header="ðŸ–¼ï¸ Wallpaper">
            <Grid Margin="20">
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="Auto"/>
               </Grid.RowDefinitions>

               <!-- Preview Section -->
               <TextBlock Grid.Row="0"
                     Text="Current Wallpaper Preview"
                          FontSize="18"
                     FontWeight="Bold"
                          Margin="0,0,0,16"/>

               <Border Grid.Row="1"
                     BorderBrush="#ccc"
                       BorderThickness="2"
                     Margin="0,0,0,20"
                       Background="White">
                  <Grid>
                     <Image x:Name="WallpaperPreview"
                           Stretch="Uniform"/>
                     <TextBlock x:Name="NoPreviewText"
                                Text="No wallpaper generated yet. Click 'Generate New Wallpaper' to create one!"
                                FontSize="14"
                                Foreground="#666"
                                HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                                TextAlignment="Center"
                           Margin="40"/>
                  </Grid>
               </Border>

               <!-- Action Buttons -->
               <Grid Grid.Row="2">
                  <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  
                  <Button x:Name="GenerateButton"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                          Background="#4CAF50"
                        Foreground="White"
                          Height="55"
                        Click="GenerateButton_Click"
                          FontSize="15"
                        FontWeight="Bold"
                        Cursor="Hand"
                        ToolTip="Generate a new wallpaper with a random quote">
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="âœ¨"
                              FontSize="22"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Generate"
                              VerticalAlignment="Center"/>
                     </StackPanel>
                  </Button>

                  <Button x:Name="RefreshButton"
                        Grid.Column="1"
                        Margin="4,0,4,0"
                          Background="#2196F3"
                        Foreground="White"
                          Height="55"
                        Click="RefreshButton_Click"
                          FontSize="15"
                        FontWeight="Bold"
                        Cursor="Hand"
                        ToolTip="Refresh the preview to see the latest wallpaper">
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”„"
                              FontSize="22"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Refresh"
                              VerticalAlignment="Center"/>
                     </StackPanel>
                  </Button>
                  
                  <Button x:Name="ApplyButton"
                        Grid.Column="2"
                        Margin="8,0,0,0"
                          Background="#FF5722"
                        Foreground="White"
                          Height="55"
                        Click="ApplyButton_Click"
                          FontSize="15"
                        FontWeight="Bold"
                        Cursor="Hand"
                        ToolTip="Set the current wallpaper as your desktop background">
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="âœ…"
                              FontSize="22"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Apply"
                              VerticalAlignment="Center"/>
                     </StackPanel>
                  </Button>
               </Grid>
            </Grid>
         </TabItem>

         <!-- Quote Management Tab -->
         <TabItem Header="ðŸ’¬ Quotes">
            <Grid Margin="20">
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="Auto"/>
               </Grid.RowDefinitions>

               <!-- Quotes Header -->
               <DockPanel Grid.Row="0"
                     Margin="0,0,0,16">
                  <TextBlock Text="Manage Quotes"
                             FontSize="18"
                        FontWeight="Bold"
                             VerticalAlignment="Center"/>
                  <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal">
                     <Button x:Name="AddQuoteButton"
                             Background="#4CAF50"
                           Foreground="White"
                             Width="120"
                           Height="42"
                           FontSize="13"
                             Click="AddQuoteButton_Click"
                             Margin="0,0,10,0"
                             Cursor="Hand"
                             ToolTip="Add New Quote">
                        <StackPanel Orientation="Horizontal">
                           <TextBlock Text="âž•"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                           <TextBlock Text="Add Quote"
                                 VerticalAlignment="Center"/>
                        </StackPanel>
                     </Button>
                     <Button x:Name="DeleteQuoteButton"
                             Background="#f44336"
                           Foreground="White"
                             Width="120"
                           Height="42"
                           FontSize="13"
                             Click="DeleteQuoteButton_Click"
                             Cursor="Hand"
                             ToolTip="Delete Selected Quote">
                        <StackPanel Orientation="Horizontal">
                           <TextBlock Text="ðŸ—‘ï¸"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                           <TextBlock Text="Delete"
                                 VerticalAlignment="Center"/>
                        </StackPanel>
                     </Button>
                  </StackPanel>
               </DockPanel>

               <!-- Quotes List -->
               <ListBox x:Name="QuotesListBox"
                     Grid.Row="1"
                        SelectionMode="Single"
                     Margin="0,0,0,16"
                        Background="Transparent">
                  <ListBox.ItemTemplate>
                     <DataTemplate>
                        <Border Margin="0,4"
                              Padding="12"
                                Background="White"
                              BorderBrush="#ddd"
                              BorderThickness="1"
                                CornerRadius="4">
                           <StackPanel>
                              <TextBlock Text="{Binding Text}"
                                         FontSize="14"
                                    FontWeight="Medium"
                                         TextWrapping="Wrap"
                                    Margin="0,0,0,8"/>
                              <StackPanel Orientation="Horizontal">
                                 <TextBlock Text="ðŸ“ "
                                       FontSize="12"
                                       Foreground="#666"/>
                                 <TextBlock Text="{Binding Character}"
                                       FontSize="12"
                                       Foreground="#666"
                                       FontWeight="Medium"/>
                                 <TextBlock Text=" ("
                                       FontSize="12"
                                       Foreground="#666"
                                       Margin="5,0,0,0"/>
                                 <TextBlock Text="{Binding Anime}"
                                       FontSize="12"
                                       Foreground="#666"/>
                                 <TextBlock Text=")"
                                       FontSize="12"
                                       Foreground="#666"/>
                              </StackPanel>
                           </StackPanel>
                        </Border>
                     </DataTemplate>
                  </ListBox.ItemTemplate>
               </ListBox>

               <!-- Quote Stats -->
               <TextBlock Grid.Row="2"
                     x:Name="QuoteCountText"
                          FontSize="12"
                     Foreground="#666"/>
            </Grid>
         </TabItem>

         <!-- Background Images Tab -->
         <TabItem Header="ðŸŒ„ Backgrounds">
            <Grid Margin="20">
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="Auto"/>
               </Grid.RowDefinitions>

               <!-- Backgrounds Header -->
               <DockPanel Grid.Row="0"
                     Margin="0,0,0,16">
                  <TextBlock Text="Manage Background Images"
                             FontSize="18"
                        FontWeight="Bold"
                             VerticalAlignment="Center"/>
                  <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal">
                     <Button x:Name="AddBackgroundButton"
                             Background="#FF9800"
                           Foreground="White"
                             Width="140"
                           Height="42"
                           FontSize="13"
                             Click="AddBackgroundButton_Click"
                             Margin="0,0,10,0"
                             Cursor="Hand"
                             ToolTip="Add Background Images">
                        <StackPanel Orientation="Horizontal">
                           <TextBlock Text="âž•"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                           <TextBlock Text="Add Images"
                                 VerticalAlignment="Center"/>
                        </StackPanel>
                     </Button>
                     <Button x:Name="DeleteBackgroundButton"
                             Background="#f44336"
                           Foreground="White"
                             Width="140"
                           Height="42"
                           FontSize="13"
                             Click="DeleteBackgroundButton_Click"
                             Cursor="Hand"
                             ToolTip="Delete Selected Background">
                        <StackPanel Orientation="Horizontal">
                           <TextBlock Text="ðŸ—‘ï¸"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                           <TextBlock Text="Delete"
                                 VerticalAlignment="Center"/>
                        </StackPanel>
                     </Button>
                  </StackPanel>
               </DockPanel>

               <!-- Backgrounds List -->
               <ListBox x:Name="BackgroundsListBox"
                     Grid.Row="1"
                        SelectionMode="Single"
                     Margin="0,0,0,16"
                        Background="Transparent">
                  <ListBox.ItemTemplate>
                     <DataTemplate>
                        <Border Margin="2"
                              Padding="8"
                                Background="White"
                              BorderBrush="#ddd"
                              BorderThickness="1"
                                CornerRadius="4">
                           <StackPanel Orientation="Horizontal">
                              <TextBlock Text="ðŸ–¼ï¸"
                                    FontSize="16"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>
                              <TextBlock Text="{Binding}"
                                    FontSize="12"
                                    VerticalAlignment="Center"/>
                           </StackPanel>
                        </Border>
                     </DataTemplate>
                  </ListBox.ItemTemplate>
               </ListBox>

               <!-- Background Stats -->
               <TextBlock Grid.Row="2"
                     x:Name="BackgroundCountText"
                          FontSize="12"
                     Foreground="#666"/>
            </Grid>
         </TabItem>

      </TabControl>
   </Grid>
</Window>